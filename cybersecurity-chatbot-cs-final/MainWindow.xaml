<Window x:Class="cybersecurity_chatbot_cs_final.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:cybersecurity_chatbot_cs_final"
        Title="Cybersecurity Chatbot" 
        Height="700" 
        Width="900"
        MinHeight="500" 
        MinWidth="700"
        Background="#F5F5F7">

    <Window.Resources>
        <!-- Converters must be defined here or in App.xaml -->
        <local:MessageBackgroundConverter x:Key="MessageBackgroundConverter"/>
        <local:MessageForegroundConverter x:Key="MessageForegroundConverter"/>
        <local:MessageAlignmentConverter x:Key="MessageAlignmentConverter"/>
    </Window.Resources>

    <Grid Background="#F5F5F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ASCII Art Header -->
        <TextBlock x:Name="AsciiArtBox" 
                   Grid.Row="0"
                   TextWrapping="Wrap" 
                   FontFamily="Consolas"
                   FontSize="10"
                   HorizontalAlignment="Center" 
                   Margin="10"
                   TextAlignment="Center"
                   Foreground="#1D1D1F"/>

        <!-- Chat History Display -->
        <Border Grid.Row="1" 
                Margin="10" 
                Background="#FFFFFF"
                BorderBrush="#D1D1D6"
                BorderThickness="1">
            <ListView x:Name="ChatHistory" 
                      Background="Transparent"
                      BorderThickness="0"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="10,4"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Focusable" Value="False"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Border Background="{Binding IsUserMessage, Converter={StaticResource MessageBackgroundConverter}}"
                                    Padding="12,8"
                                    HorizontalAlignment="{Binding IsUserMessage, Converter={StaticResource MessageAlignmentConverter}}"
                                    MaxWidth="500">

                                <TextBlock Text="{Binding Text}" 
                                           Foreground="{Binding IsUserMessage, Converter={StaticResource MessageForegroundConverter}}"
                                           TextWrapping="Wrap"
                                           FontSize="14"/>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <!-- Input Area -->
        <Border Grid.Row="2" 
                Background="#FFFFFF"
                BorderBrush="#D1D1D6"
                BorderThickness="1,1,0,0">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Input TextBox -->
                <TextBox x:Name="UserInput" 
                         Grid.Column="0"
                         Height="44"
                         VerticalContentAlignment="Center"
                         FontSize="14"
                         KeyDown="UserInput_KeyDown"
                         Padding="12"/>

                <!-- Send Button -->
                <Button x:Name="SendButton" 
                        Grid.Column="1" 
                        Content="Send" 
                        Width="80" 
                        Height="44" 
                        Margin="8,0,0,0"
                        Click="SendButton_Click"/>
            </Grid>
        </Border>

        <!-- Feature Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="15,10">

            <Button Content="Tasks" 
                    Width="70" 
                    Margin="0,0,5,0"
                    Click="TasksButton_Click"/>

            <Button Content="Quiz" 
                    Width="70" 
                    Margin="0,0,5,0"
                    Click="QuizButton_Click"/>

            <Button Content="History" 
                    Width="70"
                    Click="HistoryButton_Click"/>
        </StackPanel>
    </Grid>
</Window>