<Window x:Class="cybersecurity_chatbot_cs_final.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Quiz" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,15">
            <TextBlock x:Name="QuestionNumber" FontWeight="SemiBold" Margin="0,0,5,0"/>
            <TextBlock x:Name="ScoreText" FontWeight="SemiBold"/>
        </StackPanel>

        <Border Grid.Row="1" 
                Background="#FFFFFF"
                BorderBrush="#D1D1D6"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">

            <StackPanel>
                <TextBlock x:Name="QuestionText" 
                           TextWrapping="Wrap" 
                           FontSize="15" 
                           Margin="0,0,0,20"/>

                <ItemsControl x:Name="AnswersList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <RadioButton Content="{Binding Text}" 
                                         GroupName="QuizAnswers" 
                                         Margin="5,6" 
                                         Checked="Answer_Checked"
                                         FontSize="14"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">

            <Button x:Name="PrevButton" 
                    Content="Previous" 
                    Width="90" 
                    Margin="5" 
                    Click="PrevButton_Click"/>

            <Button x:Name="NextButton" 
                    Content="Next" 
                    Width="90" 
                    Margin="5" 
                    Click="NextButton_Click"/>

            <Button Content="Close" 
                    Width="90" 
                    Margin="5" 
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>