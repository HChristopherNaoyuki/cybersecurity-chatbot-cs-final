<Window x:Class="cybersecurity_chatbot_cs_final.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activity Log" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Recent Activities" FontWeight="SemiBold" Margin="0,0,0,10"/>

        <ListView x:Name="LogEntries" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Time" DisplayMemberBinding="{Binding Timestamp}" Width="120"/>
                    <GridViewColumn Header="Activity" DisplayMemberBinding="{Binding Description}" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Grid.Row="2" Content="Close" Width="80" HorizontalAlignment="Right" Click="Close_Click"/>
    </Grid>
</Window>