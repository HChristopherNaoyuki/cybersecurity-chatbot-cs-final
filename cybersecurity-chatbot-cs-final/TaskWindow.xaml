<Window x:Class="cybersecurity_chatbot_cs_final.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Tasks" 
        Height="450" 
        Width="600"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Add Task Section -->
        <Border Grid.Row="0" 
                Background="#FFFFFF"
                BorderBrush="#D1D1D6"
                BorderThickness="1"
                Padding="15"
                Margin="0,0,0,10">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Task:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                         x:Name="TaskTitle" 
                         Margin="10,0" 
                         Height="30"/>

                <Button Grid.Row="0" Grid.Column="2" 
                        Content="Add" 
                        Width="80" 
                        Height="30"
                        Click="AddTask_Click"/>
            </Grid>
        </Border>

        <!-- Task List -->
        <Border Grid.Row="1" 
                Background="#FFFFFF"
                BorderBrush="#D1D1D6"
                BorderThickness="1"
                Padding="15">

            <ListView x:Name="TasksList" 
                      SelectionMode="Single"
                      BorderThickness="0">

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Task" DisplayMemberBinding="{Binding Title}" Width="300"/>
                        <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <!-- Task Actions -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">

            <Button Content="Complete" 
                    Width="90" 
                    Margin="5" 
                    Click="CompleteTask_Click"/>

            <Button Content="Delete" 
                    Width="90" 
                    Margin="5" 
                    Click="DeleteTask_Click"/>

            <Button Content="Close" 
                    Width="90" 
                    Margin="5" 
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>